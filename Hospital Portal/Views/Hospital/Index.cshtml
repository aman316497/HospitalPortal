@model IEnumerable<Hospital_Portal.Models.tbl_MstHospital>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<style>
    .bar {
        margin: 0 auto;
        padding: 0px 0px 0px 40px;
        border-radius: 30px;
        border: 1px solid #dcdcdc;
    }

        .bar:hover {
            box-shadow: 1px 1px 8px 1px #dcdcdc;
        }

        .bar:focus-within {
            box-shadow: 1px 1px 8px 1px #dcdcdc;
            outline: none;
        }

    .searchbar {
        padding: 0px 0px 0px 25px;
        margin: 0px;
        height: 40px;
        width: 60%;
        border: 1px solid #dcdcdc;
        border-radius: 35px 0px 0px 35px;
        font-size: 16px;
        outline: none;
    }

    .fa fa-search {
        float: right;
    }
    .btn {
        height: 40px;
        margin-top: -9px;
        border: 1px solid #dcdcdc;
        border-radius: 0px 35px 35px 0px;
        outline: none;
    }
</style>

<div class="container">
    @using (Html.BeginForm("Index", "Hospital", FormMethod.Post))
    {
        <div class="row justify-content-center">

            <div class="col-lg-6">
                @Html.TextBox("HospitalName", "", new { @class = "searchbar", @PlaceHolder = "Search Hospital", @Title = "Search" })
                @*<input class='searchbar' type='text' PlaceHolder='Search' title='Search'>*@
                <button class="btn btn-info btn-lg" type="submit">Search Hospital</button>

            </div>
        </div>
    }
        <br>
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
            <div class="col-md-6">
                
                <div class="card ">
                    <img src="https://thumbs.dreamstime.com/b/medical-concept-hospital-medical-concept-hospital-buildings-ambulances-smooth-style-155129154.jpg" alt="Image" style="width:100%">
                    <div class="container">
                        <h4><b>@Html.DisplayFor(modelItem => item.Name)</b></h4>
                        <p>City: @Html.DisplayFor(modelItem => item.City)</p>
                        <p>Email: @Html.DisplayFor(modelItem => item.Email)</p>
                    </div>
                    @Html.ActionLink("View More >>", "HospitalDetails", new{ HospitalId = @item.HospitalId })
                </div>
                
            </div>
            }
        </div>

    
</div>